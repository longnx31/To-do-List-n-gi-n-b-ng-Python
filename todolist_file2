import os

FILENAME = "tasks_status.txt"

def load_tasks():
    tasks = []
    if os.path.exists(FILENAME):
        with open(FILENAME, "r", encoding="utf-8") as f:
            for line in f:
                text, done = line.strip().rsplit("|", 1)
                tasks.append({"text": text, "done": done == "1"})
    return tasks

def save_tasks(tasks):
    with open(FILENAME, "w", encoding="utf-8") as f:
        for task in tasks:
            f.write(f"{task['text']}|{'1' if task['done'] else '0'}\n")

def show_tasks(tasks):
    print("\nğŸ“‹ Danh sÃ¡ch cÃ´ng viá»‡c:")
    if not tasks:
        print("Danh sÃ¡ch trá»‘ng!")
    for idx, task in enumerate(tasks, 1):
        status = "âœ”" if task["done"] else "âŒ"
        print(f"{idx}. [{status}] {task['text']}")

def main():
    tasks = load_tasks()

    while True:
        print("\n1. ThÃªm cÃ´ng viá»‡c")
        print("2. Hiá»ƒn thá»‹ danh sÃ¡ch")
        print("3. ÄÃ¡nh dáº¥u hoÃ n thÃ nh")
        print("4. XÃ³a cÃ´ng viá»‡c")
        print("5. ThoÃ¡t")
        choice = input("ğŸ‘‰ Chá»n thao tÃ¡c: ").strip()

        if choice == "1":
            text = input("Nháº­p cÃ´ng viá»‡c má»›i: ")
            tasks.append({"text": text, "done": False})
            save_tasks(tasks)
            print("âœ… ÄÃ£ thÃªm.")

        elif choice == "2":
            show_tasks(tasks)

        elif choice == "3":
            show_tasks(tasks)
            try:
                idx = int(input("Sá»‘ cÃ´ng viá»‡c cáº§n Ä‘Ã¡nh dáº¥u hoÃ n thÃ nh: ")) - 1
                if 0 <= idx < len(tasks):
                    tasks[idx]["done"] = True
                    save_tasks(tasks)
                    print("ğŸ‘ ÄÃ£ Ä‘Ã¡nh dáº¥u hoÃ n thÃ nh.")
                else:
                    print("âŒ Sá»‘ khÃ´ng há»£p lá»‡.")
            except ValueError:
                print("âŒ Nháº­p sá»‘.")

        elif choice == "4":
            show_tasks(tasks)
            try:
                idx = int(input("Sá»‘ cÃ´ng viá»‡c cáº§n xÃ³a: ")) - 1
                if 0 <= idx < len(tasks):
                    removed = tasks.pop(idx)
                    save_tasks(tasks)
                    print(f"ğŸ—‘ï¸ ÄÃ£ xÃ³a: {removed['text']}")
                else:
                    print("âŒ Sá»‘ khÃ´ng há»£p lá»‡.")
            except ValueError:
                print("âŒ Nháº­p sá»‘.")

        elif choice == "5":
            print("ğŸ‘‹ Háº¹n gáº·p láº¡i!")
            break

        else:
            print("âŒ Lá»±a chá»n khÃ´ng há»£p lá»‡.")

if __name__ == "__main__":
    main()
